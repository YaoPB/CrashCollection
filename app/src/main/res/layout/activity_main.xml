<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/anr_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANRCrash"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <Button
        android:id="@+id/jue_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JUECrash"
        app:layout_constraintLeft_toRightOf="@id/anr_view"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <Button
        android:id="@+id/jni_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JNICrash"
        app:layout_constraintLeft_toRightOf="@id/jue_view"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <Button
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="report"
        app:layout_constraintLeft_toRightOf="@id/jni_view"
        app:layout_constraintHorizontal_chainStyle="packed" />

</android.support.constraint.ConstraintLayout>